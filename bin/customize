#!/bin/bash

wallpaper="Select Wallpaper"
waybar="Select Waybar Skin"
lock="Select Lockscreen Layout"
panel="Select Notification Panel Layout"
theme="Disable $(cat $HOME/.cache/theme_mode) Mode"
OPTIONS="$wallpaper\n$waybar\n$lock\n$panel\n$theme"

makenotif customize system-run "Customize Desktop" "Choose a feature to customize." "true" &
CHOICE=$(echo -e "$OPTIONS" | wofi --dmenu --hide-search --hide-scroll --lines 5 --cache-file /dev/null --prompt "Select Action") 

case "$CHOICE" in
	"$wallpaper")
		bash ~/.config/hypr/scripts/change-wallpaper.sh
		;;
	"$waybar")
		bash ~/.config/hypr/scripts/change-waybar.sh
		;;
	"$lock")
		bash ~/.config/hypr/scripts/change-lockscreen.sh
		;;
	"$theme")
		bash ~/.config/hypr/scripts/wallpapers/theme-switcher.sh
		;;
	"$panel")
		bash ~/.config/hypr/scripts/change-panel.sh
		;;
	*)
		exit 1
		;;
esac
