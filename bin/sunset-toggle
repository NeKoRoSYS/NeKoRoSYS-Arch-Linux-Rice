#!/bin/bash

if systemctl --user is-active --quiet hyprsunset.service; then
    # Smooth Fade
    for t in {3000..6500..250}; do
        hyprctl hyprsunset temperature $t
        sleep 0.01
    done
    systemctl --user stop hyprsunset.service
else
    systemctl --user start hyprsunset.service
fi

# THE CRITICAL FIX: Force the panel back open after the service command ends
# Use a tiny sleep to ensure we catch it right as it tries to close
(sleep 0.05 && swaync-client -op) &
