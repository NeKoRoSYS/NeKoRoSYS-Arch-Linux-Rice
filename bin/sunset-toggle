#!/bin/bash

STATUS=$(hyprctl -j hyprsunset | jq -r '.identity')

if [ "$STATUS" = "false" ]; then
    # Smooth Fade
    for t in {3000..6500..250}; do
        hyprctl hyprsunset temperature $t
        sleep 0.01
    done
    hyprctl hyprsunset temperature 0
else
    for t in {3000..6500..250}; do
        hyprctl hyprsunset temperature $t
        sleep 0.01
    done
    hyprctl hyprsunset temperature 4350
fi

(sleep 0.05 && swaync-client -op) &
